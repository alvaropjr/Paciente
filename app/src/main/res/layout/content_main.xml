<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.healthheart.jessica.hh.Activity.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"/>


    <ImageView
        android:layout_width="160dp"
        android:layout_height="143dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_logo_menor" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"/>

    <TextView
        android:id="@+id/txt_BemVindos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#97496d"
        android:textStyle="bold"
        android:text="@string/txt_BemVindos" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/bnt_CriaLogin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logar"
        android:textColor="@color/colorPrimaryDark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/txt_Direitos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#97496d"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/txt_Direitos" />


</LinearLayout>
