<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/common_google_signin_btn_text_dark_default"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.healthheart.jessica.hh.Activity.OxigenacaoActivity">

    <Button
        android:id="@+id/btnVoltarPrinpal"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="149dp"
        android:layout_height="30dp"
        android:text="Voltar Tela Principal"
        android:textSize="8sp" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_logo_menor" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_Oxi"
        android:textColor="#CD9B9B"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnInfoOxi"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Informações"
            android:textColor="#CD9B9B" />

    </RelativeLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddOxi"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#CD9B9B"
            android:text="Add Oxigenação"
            android:textColorLink="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnHisOxi"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#CD9B9B"
            android:text="Histórico Oxigenação" />


    </LinearLayout>



    <EditText
        android:id="@+id/edttxtDataOxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Data Oxigenação"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oxigenação:"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>


        <EditText
            android:id="@+id/edttxtOxigenacao"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.16"
            android:gravity="center"
            android:hint="100"
            android:textColorHint="#CD9B9B"
            android:textColor="#CD9B9B"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#CD9B9B"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rgCadastraOxi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbManhaOxi"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/ic_manha" />

            <RadioButton
                android:id="@+id/rbTardeOxi"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/ic_tarde" />

            <RadioButton
                android:id="@+id/rbNoiteOxi"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/ic_noiteazul" />
        </RadioGroup>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalvarOxigenacao"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#CD9B9B"
            android:text="Salvar"
            android:textColorLink="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnCancOxigenacao"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#CD9B9B"
            android:text="Cancelar" />
    </LinearLayout>



</LinearLayout>
